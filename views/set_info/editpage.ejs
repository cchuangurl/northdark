              <label for="formGroupExampleInput2">{{items.item10}}</label>
              <input type="text" name="a50preventer" class="form-control" id="formGroupExampleInput10" :value="values.value10">

              <label for="formGroupExampleInput">{{items.item11}}</label>
              <input type="text" name="a99footnote" class="form-control" id="formGroupExampleInput11" :value="values.value11">
            
